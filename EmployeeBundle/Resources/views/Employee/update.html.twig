                </li>
                <li>
                    {{ form_label(form.pi_foto, 'Foto') }}
                    {{ form_errors(form.pi_foto) }}
                    {{ form_widget(form.pi_foto) }}
                </li>

                <li class="form_handle">
                    <input type="submit" name="save" value="Save Data Employee" class="awesome medium blue" />
                    <a href="{{ path("zk_employee_employee_list") }}" class="awesome medium red">Cancel Save</a>
                </li>

                {{ form_rest(form) }}
            </form>
