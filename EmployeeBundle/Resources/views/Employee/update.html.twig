{% block title parent() ~ " - Detail Pegawai" %}

{% block content %}

<script type="text/javascript">
	$(document).ready(function(){
		$(".date").datepicker({
			changeMonth: true,
			changeYear: true,
			dateFormat: 'yy-mm-dd',
			minDate: '-100y',
			maxDate: '-15y',
			showAnim: 'fold'
		});
		$("#more_info").tabs();
	});
</script>

	<div id="info-1">
